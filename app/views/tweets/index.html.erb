<div class="container">
  <h1>Tweets<i class="fab fa-twitter"></i></h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">User Name</th>
        <th scope="col">Content</th>
        <th scope="col">Photo</th>
      </tr>
    </thead>
    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.user.user_name %></td>
          <td><%= tweet.content %></td>
          <td><img src="<%= tweet.user&.user_photo %>"'width="60" height="60" class="rounded-circle mb-2" ></td>
        </tr>
        <tr>
          <td><%= link_to 'Show', tweet %></td>
          <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to_next_page @tweets, 'Show More Tweets' %>
  <%= link_to_prev_page @tweets, 'Show Previous Tweets' %>
  <br>

  <%= link_to 'New Tweet', new_tweet_path %>
</div>
